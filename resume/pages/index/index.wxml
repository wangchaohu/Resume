<view class="swiper">
  <swiper indicator-dots="{{indicatorDots}}" circular="{{circular}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" height="150"/>
    </swiper-item>
  </block>
</swiper>
</view>
<scroll-view scroll-y="true">

<view class='foldView'>
   <view class='foldTitle' bindtap='changeFold'>{{foldTitle}}</view>
   <view class='foldContent' hidden="{{isFold}}">{{foldContent}}</view>
</view>
